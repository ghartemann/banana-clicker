{% for buffBPC in buffsBPC %}
	<div id="{{buffBPC.name}}Div" class="unavailable">
		<div class="buttonGroup tooltip">
			<button id="{{buffBPC.name}}Button" class="buffButton greyedBuff" onclick="buyBuff('BPC', '{{buffBPC.name}}', 'none'); animateCSS('#{{buffBPC.name}}Button', 'pulse');">
				<div class="buttonPic">
					<img src="assets/images/{{buffBPC.img}}" width="50px"/>
				</div>
				<div class="buttonText">
					<p class="textTitle">{{buffBPC.display_name}}</p>
					<p class="buttonSubtext">+<span id="{{buffBPC.name}}Multiplier">{{buffBPC.multiplier}}</span>
						bpc</p>
					<p class="buttonSubtext">
						<img src="assets/images/banane.png" width="20px"/>
						<strong>
							<span id="{{buffBPC.name}}Price">{{buffBPC.price}}</span>
						</strong>
						<div style="position: relative;">
							<span class="ownedNumberOnButton" id="{{buffBPC.name}}OwnedC">0</span>
						</div>
					</p>
					<p style="display:none" id="{{buffBPC.name}}PriceMultiplier">{{buffBPC.price_multiplier}}</p>
					<p style="display:none" id="{{buffBPC.name}}Type">{{buffBPC.type}}</p>
				</div>
			</button>

			<wow-tooltip class="tooltip">
				<div class="tooltip-dropdown-buffs" data-tooltip-dropdown>
					<div role="tooltip" class="tooltip-dropdown__content">
						<p>
							<strong>{{buffBPC.description}}</strong>
						</p>
						<br>
						<p>Acquis :
							<strong>
								<span id="{{buffBPC.name}}OwnedB">0</span>
							</strong>
						</p>
					</div>
				</div>
			</wow-tooltip>

			<div class="stats">
				<p>Acquis :
					<span id="{{buffBPC.name}}Owned">0</span>
				</p>
			</div>
		</div>
	</div>
{% endfor %}
